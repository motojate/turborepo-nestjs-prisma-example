{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*", "generated/**/*"],
  "exclude": ["node_modules", "dist", "schema"]
}
