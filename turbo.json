{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "start": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "test/**/*.ts", "jest.config.ts"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dependsOn": ["db:generate"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": true,

      "inputs": [
        "packages/database/configs/prisma/*.ts",
        "packages/database/scripts/*.mjs",
        "packages/database/**/*.prisma"
      ],

      "outputs": [
        "packages/database/src/prisma/generated/**",
        "packages/database/src/prisma/client-factory.generated.ts"
      ]
    }
  }
}
